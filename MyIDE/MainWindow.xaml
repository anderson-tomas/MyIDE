<RibbonWindow x:Name="MainFrame" x:Class="MyIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Ribbon>
            <RibbonTab Header="檔案">
                <RibbonGroup>
                    <RibbonButton Label="開檔" Click="OpenClick"></RibbonButton>
                    <RibbonButton Label="存檔" Click="SaveClick"></RibbonButton>
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="編輯">
                <RibbonGroup>
                    <RibbonButton  Label="複製"></RibbonButton>
                    <RibbonButton  Label="貼上"></RibbonButton>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
    </Grid>
</RibbonWindow>
